{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": [
      "error",
      "^0.8.0"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "no-console": "off",
    "no-global-import": "off",
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ],
    "func-name-mixedcase": "off",
    "no-inline-assembly": "off"
  }
}
